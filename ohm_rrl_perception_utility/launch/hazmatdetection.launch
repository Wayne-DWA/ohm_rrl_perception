<launch>

   <arg name="with_camera" default="false"/>
   <arg name="with_viewer" default="false"/>
   
   <arg name="image_topic" default="image_raw"/>
   
   <group if="$(arg with_camera)">
     <node pkg="usb_cam" type="usb_cam_node" name="usb_cam">
       <param name="camera_name"     value="driver_cam" />
       <param name="camera_frame_id" value="driver_cam" />
       <param name="pixel_format"    value="yuyv"       />
       
       <remap from="/usb_cam/image_raw" to="$(arg image_topic)"/>
     </node>
   </group>
   
   
   <node name="hazmat_detection" pkg="find_object_2d" type="find_object_2d" output="screen">
    <remap from="/image"              to="$(arg image_topic)"/>
    <param name="gui"                 value="$(arg with_viewer)"/>
    <param name="subscribe_depth"     value="false"/>
    <param name="objects_path"        value="~/hazmats"/>  <!-- Path to folder containing objects to detect. -->
    <param name="settings_path"       value=""/>  <!-- Path to settings file (*.ini). -->
   </node>
   
   <node name="hazmat_viz" pkg="ohm_rrl_perception_utility" type="hazmat_viz_node" output="screen"/>
   
</launch>
